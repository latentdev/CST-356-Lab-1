@model CST_356_Lab_1.Models.Person
@section Styles{
    <link rel="Stylesheet" href="@Href("~/Content/Person.css")" />
}
@{
    ViewBag.Title = "Person";
}
<div class="person-container person-font">
    <div class="person-header-container">
        <h2 class="person-header">@ViewBag.Title</h2>
    </div>
    <div class="person-body-container">
        <p><b>Name: </b>@Model.Name</p>
        <p><b>Age: </b>@Model.Age</p>
        <p><b>Birth Date: </b>@Model.BirthDate</p>
    </div>
</div>
